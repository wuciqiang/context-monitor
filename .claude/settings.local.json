{
  "hooks": {
    "SessionStart": [
      {
        "matcher": "startup|resume",
        "hooks": [
          {
            "type": "command",
            "command": "python \"$CLAUDE_PROJECT_DIR/.claude/hooks/capture-session-info.py\"",
            "timeout": 5
          }
        ]
      }
    ]
  },
  "mcpServers": {
    "context-monitor": {
      "type": "stdio",
      "command": "python",
      "args": [".claude/mcp-servers/context-monitor/server.py"],
      "env": {}
    }
  }
}
