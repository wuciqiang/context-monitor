{
  "hooks": {
    "SessionStart": [
      {
        "type": "command",
        "command": "bash hooks/capture-session-info.sh",
        "timeout": 5
      }
    ]
  },
  "mcpServers": {
    "context-monitor": {
      "command": "python3",
      "args": ["mcp-servers/context-monitor/server.py"],
      "env": {}
    },
    "code-index": {
      "command": "uvx",
      "args": ["code-index-mcp"]
    }
  }
}
